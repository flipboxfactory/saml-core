{% extends "_layouts/cp" %}

{% block content %}
    <div class="elements">
        <div class="field">
            <a href="{{ cpUrl(plugin.handle ~"/metadata/new-sp") }}" class="btn large submit icon add" style="float: right;">Add Service Provider</a>
            <h2>
                Service Provider List
            </h2>
            <p>
                {{ spListInstructions }}
            </p>
        </div>
        <div class="tableview tablepane">
            <table class="data fullwidth">
                <thead>
                <tr>
                    <th scope="col" data-attribute="label">Label</th>
                    <th scope="col" data-attribute="entityid">EntityId</th>
                    <th scope="col" data-attribute="dateCreated">Date Created</th>
                    <th scope="col" data-attribute="dateUpdated">Date Updated</th>
                    <th scope="col" data-attribute="dateUpdated">UID</th>
                </tr>
                </thead>
                <tbody>
                {% for provider in spProviders %}
                    <tr data-id="">
                        <td data-title="label">
                            <div class="element small hasstatus "
                                 data-status="active"
                                    {% if myProvider and myProvider.id == provider.id %}
                                        data-url="{{ cpUrl(plugin.handle ~ '/metadata/my-provider') }}"
                                    {% else %}
                                        data-url="{{ cpUrl(plugin.handle ~ '/metadata/' ~ provider.id) }}"
                                    {% endif %}
                                 data-level="" data-editable="">
                                <span class="status {% if provider.enabled %}active{% else %}inactive{% endif %}"></span>
                                <div class="label">
                                    <span class="title">
                                        <a
                                                    href="{{ cpUrl(plugin.handle ~ '/metadata/' ~ provider.id) }}"
                                        >{{ provider.label ?? 'Provider' }}
                                        </a>
                                        {% if myProvider and myProvider.id == provider.id %}
                                            (My Provider)
                                        {% endif %}
                                    </span>
                                </div>
                            </div>
                        </td>
                        <td data-title="entityid">{{ provider.entityId }}</td>
                        <td data-title="Date Created">{{ provider.dateCreated|date }}</td>
                        <td data-title="Date Updated">{{ provider.dateUpdated|date }}</td>
                        <td data-title="UID">{{ provider.uid }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        <hr style="margin-inline: calc(var(--xl)*-1)">
        <div class="field">
            <a href="{{ cpUrl(plugin.handle ~"/metadata/new-idp") }}" class="btn large submit icon add" style="float: right;">Add Identity Provider</a>
            <h2>
                Identity Provider List
            </h2>
            <p>
                {{ idpListInstructions }}
            </p>
        </div>
        <div class="tableview tablepane">
            <table class="data fullwidth">
                <thead>
                <tr>
                    <th scope="col" data-attribute="label">Label</th>
                    <th scope="col" data-attribute="entityid">EntityId</th>
                    <th scope="col" data-attribute="dateCreated">Date Created</th>
                    <th scope="col" data-attribute="dateUpdated">Date Updated</th>
                    <th scope="col" data-attribute="dateUpdated">UID</th>
                </tr>
                </thead>
                <tbody>
                {% for provider in idpProviders %}
                    <tr data-id="">
                        <td data-title="label">
                            <div class="element small hasstatus "
                                 data-status="active"
                                        data-url="{{ cpUrl(plugin.handle ~ '/metadata/' ~ provider.id) }}"
                                 data-level="" data-editable="">
                                <span class="status {% if provider.enabled %}active{% else %}inactive{% endif %}"></span>
                                <div class="label">
                                    <span class="title">
                                        <a
                                                    href="{{ cpUrl(plugin.handle ~ '/metadata/' ~ provider.id) }}"
                                        >{{ provider.label ?? 'Provider' }}
                                        </a>
                                        {% if myProvider and myProvider.id == provider.id %}
                                            (My Provider)
                                        {% endif %}
                                    </span>
                                </div>
                            </div>
                        </td>
                        <td data-title="entityid">{{ provider.entityId }}</td>
                        <td data-title="Date Created">{{ provider.dateCreated|date }}</td>
                        <td data-title="Date Updated">{{ provider.dateUpdated|date }}</td>
                        <td data-title="UID">{{ provider.uid }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
